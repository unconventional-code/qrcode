{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		/**
		 * For getting things started, we will not emit declaration files
		 */
		"declaration": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"inlineSources": true,
		"lib": [
			"es2020",
			"dom"
		],
		"module": "commonjs",
		/**
		 * For getting things started, we will not emit a build
		 */
		"noEmit": true,
		"noFallthroughCasesInSwitch": false,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"outDir": "./build",
		"resolveJsonModule": true,
		"strict": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": false,
		"target": "ES2020",
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"exclude": [
		"node_modules",
		"./build"
	]
}